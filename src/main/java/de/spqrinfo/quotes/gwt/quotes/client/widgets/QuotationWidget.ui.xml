<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel styleName="quote">
        <div class="row">
            <g:HTMLPanel styleName="col-md-12" ui:field="quotationTextContainer">
                <blockquote>
                    <p ui:field="quotationText"></p>
                </blockquote>
            </g:HTMLPanel>
        </div>
        <div class="row">
            <div class="col-md-4">
                <small><g:InlineLabel ui:field="lastModifiedLabel"/></small>
            </div>
            <div class="col-md-4 col-md-offset-4" style="text-align: right">
                <g:Anchor ui:field="authorLink"></g:Anchor>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
